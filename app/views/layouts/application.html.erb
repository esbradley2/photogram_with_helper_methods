<!DOCTYPE html>
<html>
<head>
  <title>Photogram</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if notice.present? %>
    <p><%= notice %></p>
  <% end %>

  <% if alert.present? %>
    <p><%= alert %></p>
  <% end %>

<%= yield %>

</body>
</html>
