<h1>List of Photos</h1>

<a href="http://localhost:3000/photos/new">Add a New Photo</a>

<%= link_to "Add a New Photo", "http://localhost:3000/photos/new", :class => "btn btn-warning" %>


<table>
  <tr>
    <th>Thumbnail</th>
    <th>Caption</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_photos.each do |photo| %>
  <tr>
    <td>
      <img src="<%= photo.source %>" width="80">
      <%= image_tag photo.source, :width => 80 %>
    </td>
    <td>
      <%= photo.caption %>    </td>
    <td>
      <a href="http://localhost:3000/photos/<%= photo.id %>">Show</a>

      <%= link_to "Show", "http://localhost:3000/photos/#{photo.id}" %>
    </td>
    <td>
      <a href="http://localhost:3000/photos/<%= photo.id %>/edit">Edit</a>

      <%= link_to "Edit", "http://localhost:3000/photos/#{photo.id}/edit" %>
    </td>
    <td>
      <a href="http://localhost:3000/delete_photo/<%= photo.id %>">Delete</a>

      <%= link_to "Delete", "http://localhost:3000/photos/#{photo.id}", :method => 'delete', :data => { :confirm => "Are you suuuuure?" } %>
    </td>
  </tr>
  <% end %>





</table>
